{
  "manifest_version": 3,
  "name": "VIT InstaConnect",
  "description": "Instantly connect to VIT Wi-Fi without manual logins",
  "version": "1.1",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://hfw.vitap.ac.in/*",
    "https://hfw2.vitap.ac.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://172.18.10.10:1000/login?",
        "http://172.18.10.10:1000/*"
      ],
      "js": ["scripts/content-script-2.js"]
    },
    {
      "matches": [
        "https://hfw.vitap.ac.in:8090/*",
        "https://hfw2.vitap.ac.in/*"
      ],
      "js": ["scripts/content-script-1.js"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["scripts/inject-1.js"],
      "matches": ["https://hfw.vitap.ac.in/*", "https://hfw2.vitap.ac.in/*"]
    },
    {
      "resources": ["scripts/inject-2.js"],
      "matches": ["http://172.18.10.10:1000/*", "https://172.18.10.10:1000/*"]
    }
  ],
  "commands": {
    "executeScriptCommand": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Command+Q"
      },
      "description": "Execute script and close tab"
    },
    "loginToHostel1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Command+1"
      },
      "description": "Login to Hostel1"
    },
    "loginToHostel2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Command+2"
      },
      "description": "Login to Hostel2"
    },
    "loginToUniversity": {
      "suggested_key": {
        "default": "Alt+3",
        "mac": "Command+3"
      },
      "description": "Login to University"
    }
  }
}
